<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".KeyboardActivity">

    <TextView android:text="" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="a"
        android:onClick="a_clicked"
        android:layout_marginLeft="20dp"
        android:id="@+id/but_a"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="b"
        android:onClick="b_clicked"
    android:id="@+id/but_b"
    android:layout_toRightOf="@+id/but_a"
    />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="c"
        android:onClick="c_clicked"
        android:id="@+id/but_c"
        android:layout_toRightOf="@+id/but_b"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="d"
        android:onClick="d_clicked"
        android:id="@+id/but_d"
        android:layout_toRightOf="@+id/but_c"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="e"
        android:onClick="e_clicked"
        android:id="@+id/but_e"
        android:layout_toRightOf="@+id/but_d"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="f"
        android:onClick="f_clicked"
        android:id="@+id/but_f"
        android:layout_toRightOf="@+id/but_e"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="g"
        android:onClick="g_clicked"
        android:id="@+id/but_g"
        android:layout_toRightOf="@+id/but_f"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="h"
        android:onClick="h_clicked"
        android:layout_marginLeft="20dp"
        android:id="@+id/but_h"
        android:layout_below="@+id/but_a"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="i"
        android:onClick="i_clicked"
        android:id="@+id/but_i"
        android:layout_toRightOf="@+id/but_h"
        android:layout_below="@+id/but_b"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="j"
        android:id="@+id/but_j"
        android:onClick="j_clicked"
        android:layout_toRightOf="@+id/but_i"
        android:layout_below="@+id/but_b"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="k"
        android:onClick="k_clicked"
        android:id="@+id/but_k"
        android:layout_toRightOf="@+id/but_j"
        android:layout_below="@+id/but_b"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="l"
        android:onClick="l_clicked"
        android:id="@+id/but_l"
        android:layout_toRightOf="@+id/but_k"
        android:layout_below="@+id/but_b"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="m"
        android:onClick="m_clicked"
        android:id="@+id/but_m"
        android:layout_toRightOf="@+id/but_l"
        android:layout_below="@+id/but_b"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="n"
        android:onClick="n_clicked"
        android:id="@+id/but_n"
        android:layout_toRightOf="@+id/but_m"
        android:layout_below="@+id/but_b"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="o"
        android:onClick="o_clicked"
        android:id="@+id/but_o"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/but_h"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="p"
        android:onClick="p_clicked"
        android:id="@+id/but_p"
        android:layout_toRightOf="@+id/but_o"
        android:layout_below="@+id/but_h"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="q"
        android:onClick="q_clicked"
        android:id="@+id/but_q"
        android:layout_toRightOf="@+id/but_p"
        android:layout_below="@+id/but_h"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="r"
        android:onClick="r_clicked"
        android:id="@+id/but_r"
        android:layout_toRightOf="@+id/but_q"
        android:layout_below="@+id/but_h"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="s"
        android:onClick="s_clicked"
        android:id="@+id/but_s"
        android:layout_toRightOf="@+id/but_r"
        android:layout_below="@+id/but_h"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="t"
        android:onClick="t_clicked"
        android:id="@+id/but_t"
        android:layout_toRightOf="@+id/but_s"
        android:layout_below="@+id/but_h"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="u"
        android:onClick="u_clicked"
        android:id="@+id/but_u"
        android:layout_toRightOf="@+id/but_t"
        android:layout_below="@+id/but_h"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="v"
        android:onClick="v_clicked"
        android:id="@+id/but_v"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/but_o"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="w"
        android:onClick="w_clicked"
        android:id="@+id/but_w"
        android:layout_toRightOf="@+id/but_v"
        android:layout_below="@+id/but_o"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="x"
        android:onClick="x_clicked"
        android:id="@+id/but_x"
        android:layout_toRightOf="@+id/but_w"
        android:layout_below="@+id/but_o"
    />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="y"
        android:onClick="y_clicked"
        android:id="@+id/but_y"
        android:layout_toRightOf="@+id/but_x"
        android:layout_below="@+id/but_o"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="z"
        android:onClick="z_clicked"
        android:id="@+id/but_z"
        android:layout_toRightOf="@+id/but_y"
        android:layout_below="@+id/but_o"
        />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/but_enter"
        android:background="@drawable/enter_color_onclick"
        android:layout_marginBottom="114dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" 
        android:onClick="enter_clicked"
        />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/but_right"
        android:background="@drawable/right_color_onclick"
        android:layout_below="@+id/but_top"
        android:onClick="right_clicked"
        android:layout_marginLeft="-20dp"
        android:layout_toRightOf="@+id/but_z"
        android:layout_toEndOf="@+id/but_z" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/but_left"
        android:layout_marginLeft="-10dp"
        android:background="@drawable/left_color_onclick"
        android:layout_below="@+id/but_top"
        android:layout_toRightOf="@+id/but_w"
        android:layout_toEndOf="@+id/but_w" 
        android:onClick="left_clicked"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/but_top"
        android:background="@drawable/top_color_onclick"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/but_enter"
        android:layout_centerHorizontal="true"
        android:onClick="top_clicked" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/but_bottom"
        android:background="@drawable/bottom_color_onclick"
        android:layout_below="@+id/but_left"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="bottom_clicked" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/but_z"
        android:layout_alignLeft="@+id/but_t"
        android:onClick="backspace_clicked"
        android:text="Backspace" />

    <Button
        android:id="@+id/button1"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/but_v"
        android:layout_centerHorizontal="true"
        android:onClick="space_clicked"
        android:text="Space" />

    <Button
        android:id="@+id/but_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/but_w"
        android:layout_alignStart="@+id/but_v"
        android:layout_alignTop="@+id/button3"
        android:background="@drawable/back"
        android:onClick="back_clicked" />

    <Button
        android:id="@+id/but_shutdown"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/but_top"
        android:layout_alignParentRight="true"
        android:onClick="shut_clicked"
        android:background="@drawable/shutdown" />

    <Button
        android:id="@+id/but_sleep"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/but_right"
        android:layout_alignRight="@+id/but_shutdown"
         android:onClick="sleep_clicked"
        android:background="@drawable/sleep" />

     <Button
         android:id="@+id/but_logoff"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:layout_alignRight="@+id/but_sleep"
         android:layout_alignTop="@+id/but_bottom"
         android:background="@drawable/logoff"
          android:onClick="logoff_clicked" />

     <Button
         android:id="@+id/button3"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_alignRight="@+id/button1"
         android:layout_below="@+id/but_bottom"
         android:background="@drawable/close"
          android:onClick="close_clicked" />

</RelativeLayout>



